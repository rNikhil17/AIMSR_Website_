@{
    ViewData["Title"] = "MCA - Master of Computer Applications";
}

<div class="course-page">
    <div class="container">
        <div class="header-section text-center">
            <h1>MCA - Master of Computer Applications</h1>
            <p>Learn advanced computing and software development.</p>
        </div>

        <div class="course-section">
            <h2>About MCA</h2>
            <p>The MCA program provides advanced knowledge in computer applications, AI, and software development.</p>
        </div>

        <div class="course-section">
            <h2>Faculties</h2>
            <ul class="faculty-list">
                <li><strong>Dr. Neeta Bhatt</strong></li>
                <li><strong>Prof. Rashmi Pathak</strong> - AI & Machine Learning</li>
                <li><strong>Prof. Sweta Nigam</strong> - Data Science</li>
                <li><strong>Prof. Mithila Chavan</strong> - Data Structure</li>
                <li><strong>Prof. Ramakrishnan Iyer</strong> - RPA</li>
            </ul>
        </div>

        <div class="course-section fees-box">
            <h2>Fees Structure</h2>
            <p><strong>₹1,50,000 per year</strong></p>
        </div>

        <div class="course-section form-container">
            <h2>Enquiry Form</h2>
            <form>
                <div class="form-group">
                    <label>Name:</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
